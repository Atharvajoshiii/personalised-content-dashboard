      ? categories[Math.floor(Math.random() * categories.length)]
      : 'general';
      
    return {
      id: i + 1,
      userId: i % mockUsers.length + 1,
      title: '',
      body: `${body} ${hashtags.join(' ')}`.trim(),
      username: user.name,
      handle: user.handle || `@${user.username}`,
